# better ls
alias ls='ls -Fhv --color=auto --group-directories-first'

# all v & c options list changes. i prompts in case of overwrite
alias cp='cp -vi'
alias mv='mv -vi'
alias ln='ln -vi'
alias chmod="chmod -c"
alias chown="chown -c"
alias mkdir="mkdir -v"

# nice colors
alias grep='grep --colour=auto'
alias egrep='egrep --colour=auto'

